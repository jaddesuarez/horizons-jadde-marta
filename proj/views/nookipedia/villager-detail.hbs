<div class="container mt-5">
    <div class="row">
        <div class="col villager">
            <img src="{{villager.image_url}}" class="card-img-top" alt="villager icon">
        </div>
        <div class="col">
            <h3> {{villager.name}}</h3>
            <h3> {{name}}</h3>
            <hr>
            <h5 class='mb-4'><em><strong>"{{villager.quote}}"</strong></em></h5>
            <p><strong>Personality:</strong> {{villager.personality}}</p>
            <p><strong>Specie:</strong> {{villager.species}}</p>
            <p><strong>Genre:</strong> {{villager.gender}}</p>
            <p><strong>Birthday:</strong> {{villager.birthday_day}} of {{villager.birthday_month}}</p>
            <p><strong>Sign:</strong> {{villager.sign}}</p>
            <p><strong>Gender:</strong> {{villager.gender}}</p>
            <hr>
            {{#if currentUserId}}
            <div class="row">
                <div class="col mb-6 d-grid">
                    {{#unless isFav}}
                    <form action="/profile/{{villager.name}}/addFav" method="POST">
                        <button class="btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                fill="currentColor" class="bi bi-suit-heart-fill" viewBox="0 0 16 16">
                                <path
                                    d="M4 1c2.21 0 4 1.755 4 3.92C8 2.755 9.79 1 12 1s4 1.755 4 3.92c0 3.263-3.234 4.414-7.608 9.608a.513.513 0 0 1-.784 0C3.234 9.334 0 8.183 0 4.92 0 2.755 1.79 1 4 1z" />
                            </svg></button>
                    </form>
                    {{/unless}}
                    {{#if isFav}}
                    <form action="/profile/{{villager.name}}/quitFav" method="POST">
                        <button class="btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                fill="currentColor" class="bi bi-suit-heart" viewBox="0 0 16 16">
                                <path
                                    d="m8 6.236-.894-1.789c-.222-.443-.607-1.08-1.152-1.595C5.418 2.345 4.776 2 4 2 2.324 2 1 3.326 1 4.92c0 1.211.554 2.066 1.868 3.37.337.334.721.695 1.146 1.093C5.122 10.423 6.5 11.717 8 13.447c1.5-1.73 2.878-3.024 3.986-4.064.425-.398.81-.76 1.146-1.093C14.446 6.986 15 6.131 15 4.92 15 3.326 13.676 2 12 2c-.777 0-1.418.345-1.954.852-.545.515-.93 1.152-1.152 1.595L8 6.236zm.392 8.292a.513.513 0 0 1-.784 0c-1.601-1.902-3.05-3.262-4.243-4.381C1.3 8.208 0 6.989 0 4.92 0 2.755 1.79 1 4 1c1.6 0 2.719 1.05 3.404 2.008.26.365.458.716.596.992a7.55 7.55 0 0 1 .596-.992C9.281 2.049 10.4 1 12 1c2.21 0 4 1.755 4 3.92 0 2.069-1.3 3.288-3.365 5.227-1.193 1.12-2.642 2.48-4.243 4.38z" />
                            </svg></button>
                    </form>
                    {{/if}}
                </div>
                <div class="col">
                    {{#unless isResident}}
                    <form action="/profile/{{villager.name}}/addResident" method="POST">
                        <button class="btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                fill="currentColor" class="bi bi-house-door-fill" viewBox="0 0 16 16">
                                <path
                                    d="M6.5 14.5v-3.505c0-.245.25-.495.5-.495h2c.25 0 .5.25.5.5v3.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5Z" />
                            </svg></button>
                    </form>
                    {{/unless}}
                    {{#if isResident}}
                    <form action="/profile/{{villager.name}}/quitResident" method="POST">
                        <button class="btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                fill="currentColor" class="bi bi-house-door" viewBox="0 0 16 16">
                                <path
                                    d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-4h2v4a.5.5 0 0 0 .5.5H14a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146ZM2.5 14V7.707l5.5-5.5 5.5 5.5V14H10v-4a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v4H2.5Z" />
                            </svg></button>
                    </form>
                    {{/if}}
                </div>
            </div>
            {{/if}}
        </div>
    </div>

</div>