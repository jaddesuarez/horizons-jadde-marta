<h1 class="text-center mt-4">Nookipedia</h1>
<h3 class="text-center mb-4">Fossils</h3>

<div class="row justify-content-center flex-wrap gap-3">
    {{#each fossils}}
    <div class="fossils card" style="width: 10rem;">
        <img src="{{image_url}}" class="card-img-top" alt="villager icon">
        <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">{{fossil_group}}</p>
        </div>
    </div>
    {{/each}}

</div>