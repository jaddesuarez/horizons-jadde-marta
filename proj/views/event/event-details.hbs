<div class="cardevent" style="display:flex;justify-content:center; margin-top: 20vh;">
    <div class="box">
    <div class="row justify-content-between">
        <div class="col-6">
            <img src="{{eventImg}}" alt="image" style="width: 100%;height: 40vh; border-radius: 5px" class="eventimage">
        </div>
        <div class="col-6" >
            <div style="margin-left: 20px;">

            <h1 class="top">{{title}}</h1>
        
            <h5 class="mt-3">{{description}}</h5>
            <h6 class="mt-4"><strong>Event creator:</strong> <a class='linkuser'href="/profile/{{creator._id}}">@{{creator.username}}</a></h6>
            <p class="mt-3"><strong>Date:</strong> {{formattedDate.day}}/{{formattedDate.month}}/{{formattedDate.year}}</p>
            <p class="mt-2"><strong>Island:</strong> {{creator.islandName}}</p>
            <hr>

            <div class="row">
            <div class="col  d-grid d-flex flex-wrap">
            <form action="/event/{{_id}}/join" method="POST">
                <button class="join btn btn-primary me-3">Join</button>
            </form>
            <form action="/event/{{_id}}/unjoin" method="POST">
                <button class="unj btn btn-primary">unJoin</button>
            </form>
            </div>
            </div>

            </div>
        </div>
    </div>
</div>
</div>
