<div class="cardevent" style="display:flex;justify-content:center; margin-top: 20vh;">
    <div class="box">
        <div class="row justify-content-between">
            <div class="col-6">
                <img src="{{eventFromDB.eventImg}}" alt="image" style="width: 100%;height: 40vh; border-radius: 5px"
                    class="eventimage">
            </div>
            <div class="col-6">
                <div style="margin-left: 20px;">

                    <h1 class="top">{{eventFromDB.title}}</h1>

                    <h5 class="mt-3">{{eventFromDB.description}}</h5>
                    <h6 class="mt-4"><strong>Event creator:</strong> <a class='linkuser'
                            href="/profile/{{eventFromDB.creator._id}}">@{{eventFromDB.creator.username}}</a></h6>
                    <p class="mt-3"><strong>Date:</strong>
                        {{eventFromDB.formattedDate.day}}/{{eventFromDB.formattedDate.month}}/{{eventFromDB.formattedDate.year}}
                    </p>
                    <p class="mt-2"><strong>Island:</strong> {{eventFromDB.creator.islandName}}</p>
                    <p><strong class="me-2">Attendance:</strong>
                        {{#each eventFromDB.attendance}}
                        <img src="{{this.profileImg}}" class="attendance-img me-2" alt="profile image">
                        {{!-- <span>{{this.name}} |</span> --}}
                        {{/each}}
                    </p>

                    <hr>
                    {{#if currentUserId}}
                    <div class="row">
                        {{#unless isJoin}}
                        <div class="col  d-grid d-flex flex-wrap">
                            <form action="/event/{{eventFromDB._id}}/join" method="POST">
                                <button class="join btn btn-primary me-3">Join</button>
                            </form>
                            {{/unless}}
                            {{#if isJoin}}
                            <form action="/event/{{eventFromDB._id}}/unjoin" method="POST">
                                <button class="unj btn btn-primary">unJoin</button>
                            </form>
                            {{/if}}
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>