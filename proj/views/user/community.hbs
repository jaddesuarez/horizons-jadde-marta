<div class="container mt-4">
    <h1 class="text-center">Community</h1>
    <form action="/community/search" method="GET">
        <div class="container d-grid">
            <input type="text" id='search-box' name="username" class="form-control mt-3 mb-2"
                placeholder="Search friend">
            {{#if error}}
            <div id="errorMessage">
                <p>{{error}}</p>
            </div>
            {{/if}}
            <button type="submit" class="btn btn-search mb-2">Search</button>
        </div>
    </form>
    <div class="row justify-content-center gap-3 mt-2">
        {{#each usersArr}}
        <div class="user card" style="width: 10rem;">
            <div class="col">
                <div class="col">
                    <img class="card-img-top user-img p-2" src="{{profileImg}}" alt="profile image">
                </div>
                <div class="col">
                    <h5 class="card-title">{{name}} {{lastName}}</h5>
                    <a href="/profile/{{_id}}" class="join btn mb-3 d-grid">See Profile</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>