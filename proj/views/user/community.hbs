<div class="container">
    <h1>Community</h1>
    <hr>

    {{#each usersArr}}
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{profileImg}}" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{name}} {{lastName}}</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
                content.</p>
            <a href="/profile/{{_id}}" class="btn btn-primary">INFO</a>
        </div>
    </div>
    {{/each}}

    <hr>
</div>